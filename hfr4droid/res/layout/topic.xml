<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical">
	<TextView
		android:id="@+id/CatTitle"
		android:textStyle="bold"
		android:gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<ImageView
		android:id="@+id/TopicFlag"
		android:paddingLeft="3dip"
		android:baselineAlignBottom="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<LinearLayout
	    android:id="@+id/TopicInfos"
	    android:orientation="vertical"
	    android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout
		    android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/ItemUnread"
				android:textStyle="bold"
				android:paddingLeft="3dip"
				android:textColor="#FF0000"
				android:text="@string/mp_unread"
				android:lines="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />		
			<TextView
				android:id="@+id/ItemAuthor"
				android:lines="1"
				android:paddingLeft="3dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:id="@+id/ItemContent"
				android:lines="1"
				android:ellipsize="end"
				android:scrollHorizontally="true"
				android:paddingLeft="3dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/TopicAddInfos"
		    android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
			    android:id="@+id/LastPostInfos"
				android:lines="1"
				android:ellipsize="end"
				android:scrollHorizontally="true"
				android:paddingLeft="3dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
			    android:id="@+id/PagesInfos"
				android:paddingLeft="3dip"
				android:gravity="right"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:id="@+id/ItemRemainingPages"
		android:textSize="11dip"
		android:lines="1"
		android:layout_weight="0"
		android:paddingLeft="2dip"
		android:paddingTop="2dip"
        android:layout_gravity="right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>