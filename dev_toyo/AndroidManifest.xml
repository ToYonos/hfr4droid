<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="info.toyonos.hfr4droid"
      android:versionCode="010"
      android:versionName="0.1.0"
      android:installLocation="auto">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
	<uses-sdk android:minSdkVersion="3" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="HFR4droidApplication" android:debuggable="true">
        <activity android:label="@string/app_name" android:name=".activity.CategoriesActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TopicsActivity" android:configChanges="orientation" />
        <activity android:name=".activity.PostsActivity" android:configChanges="orientation" />
        <activity android:name=".activity.HFR4droidPrefs"/>

        <service android:name=".service.MpCheckService"/>
	</application>
</manifest>